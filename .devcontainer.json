{
    "name": "HookCI",
    "build": {
        "dockerfile": "Codigo/Dockerfile",
        "args": {
            "DEVCONTAINER": "base"
        }
    },
    "remoteUser": "hookci",
    "workspaceFolder": "/hookci",
    "mounts": [
        "source=${localWorkspaceFolder}/,target=/hookci,type=bind",
        "source=${env:HOME},target=/home/hookci,type=bind",
        "source=/etc/profile,target=/etc/profile,type=bind,readonly",
        "source=/etc/bash.bashrc,target=/etc/bash.bashrc,type=bind,readonly"
    ],
    "containerEnv": {
        "TERM": "${env:TERM}",
        "TMUX": "${env:TMUX}"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "njpwerner.autodocstring",
                "timonwong.shellcheck",
                "DavidAnson.vscode-markdownlint"
            ]
        }
    }
}