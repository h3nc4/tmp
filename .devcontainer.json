{
  "name": "WASudoku",
  "image": "h3nc4/wasudoku-dev:latest",
  "runArgs": [
    "-v",
    "/etc/localtime:/etc/localtime:ro",
    "-v",
    "/etc/timezone:/etc/timezone:ro",
    "--name=wasudoku-devcontainer",
    "--network=host"
  ],
  "remoteUser": "wasudoku",
  "workspaceFolder": "/wasudoku",
  "mounts": [
    "source=${localWorkspaceFolder}/,target=/wasudoku,type=bind",
    "source=${env:HOME},target=/home/wasudoku,type=bind",
    "source=/etc/profile,target=/etc/profile,type=bind,readonly",
    "source=/etc/bash.bashrc,target=/etc/bash.bashrc,type=bind,readonly"
  ],
  "containerEnv": {
    "TERM": "${env:TERM}",
    "TMUX": "${env:TMUX}"
  },
  "userEnvProbe": "interactiveShell",
  "postCreateCommand": "./scripts/wasm-deps.sh -d",
  "customizations": {
    "vscode": {
      "extensions": [
        "timonwong.shellcheck",
        "DavidAnson.vscode-markdownlint",
        "ms-vscode-remote.vscode-remote-extensionpack",
        "ms-azuretools.vscode-docker",
        "donjayamanne.githistory",
        "eamodio.gitlens",
        "foxundermoon.shell-format",
        "rust-lang.rust-analyzer",
        "vadimcn.vscode-lldb",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "editor.formatOnSave": true,
        "files.insertFinalNewline": true,
        "files.trimFinalNewlines": true,
        "rust-analyzer.linkedProjects": ["./src/wasudoku-wasm/Cargo.toml"],
        "prettier.enable": true,
        "[typescript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[typescriptreact]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[css]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[html]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[jsonc]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "shellcheck.customArgs": ["-o", "all"]
      }
    }
  }
}
