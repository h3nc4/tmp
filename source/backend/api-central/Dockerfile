FROM maven:3.9-eclipse-temurin-21 AS build
WORKDIR /app

RUN --mount=type=cache,target=/root/.m2 mvn -v

COPY pom.xml .
RUN --mount=type=cache,target=/root/.m2 mvn -e -B -DskipTests dependency:go-offline

COPY src ./src
RUN --mount=type=cache,target=/root/.m2 mvn -e -B -DskipTests clean package

FROM eclipse-temurin:21-jre
WORKDIR /app

COPY --from=build /app/target/*.jar /app/app.jar

EXPOSE 8080
ENTRYPOINT ["java","-jar","/app/app.jar"]